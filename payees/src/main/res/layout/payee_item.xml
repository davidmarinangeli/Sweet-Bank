<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/payeeItemParentView"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/payeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray600"
        app:layout_constraintStart_toEndOf="@+id/initials"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PayeeName" />

    <TextView
        android:id="@+id/firstAndLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/payeeName"
        app:layout_constraintTop_toBottomOf="@+id/payeeName"
        tools:text="Ringo Star With a Longer Name" />

    <TextView
        android:id="@+id/initials"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/cardshape_background"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center|center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PN" />


    <TextView
        android:id="@+id/accountNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/cardshape_background"
        android:backgroundTint="@color/colorAccentDark"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textAllCaps="true"
        android:textColor="@color/colorAccentDark"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/firstAndLastName"
        app:layout_constraintTop_toBottomOf="@+id/firstAndLastName"
        tools:text="1 ACCOUNT" />

    <ImageView
        android:id="@+id/chevronArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>